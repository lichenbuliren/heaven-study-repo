{
  "name": "heaven-study-repo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "release": "changeset publish",
    "typecheck": "tsc --build --force",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "lint:staged": "eslint --fix --max-warnings=0"
  },
  "keywords": [],
  "author": "lichenbuliren@gmail.com",
  "devDependencies": {
    "@changesets/cli": "^2.0.0",
    "@workspace/eslint-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "turbo": "2.5.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "turbo run lint:staged --concurrency=4 --filter=...[HEAD^] --",
      "turbo run format --concurrency=4 --filter=...[HEAD^] --"
    ],
    "**/*.{json,css,scss,md}": [
      "turbo run format --concurrency=4 --filter=...[HEAD^] --"
    ]
  },
  "license": "ISC",
  "packageManager": "pnpm@9.6.0"
}
